<div class = " card row mb-4" style="width: 18rem;">
    <p id = "post-id">{{post.id}}</p>
<h1 class = "card title">{{post.title}}</h1>
<h3>{{post.text}}</h3>
</div>
{{#if logged_in}}
    <h3>Leave a Comment</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="project-desc">Content:</label>
        <textarea class="textComment" id="commentText"></textarea>
      </div>
      <div class="form-group">
        <button id= "commentBtn" type="submit" class="btn btn-success">Create</button>
      </div>
    </form>
  </div>
  {{/if}}

  

 {{#if post.Comments.length}}
  <div class="col-md-6 post-list">
    <h3>Comments:</h3>

    {{#each post.Comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/comment/{{comment.id}}">{{comment.content}}</a></h4>
      </div>
    {{/each}}
  </div>
  {{/if}}
</div>






<script src="/js/comment.js"></script>


